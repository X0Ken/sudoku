<Window x:Class="Sudoku.Question"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Question" Height="480" Width="800" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        
        <WebBrowser x:Name="QusetionText" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"/>
        <Button Grid.Row="1" Grid.Column="0" FontSize="36" x:Name="AnswerA" Click="Answer_Click">A</Button>
        <Button Grid.Row="1" Grid.Column="1" FontSize="36" x:Name="AnswerB" Click="Answer_Click">B</Button>
        <Button Grid.Row="1" Grid.Column="2" FontSize="36" x:Name="AnswerC" Click="Answer_Click">C</Button>
        <Button Grid.Row="1" Grid.Column="3" FontSize="36" x:Name="AnswerD" Click="Answer_Click">D</Button>
    </Grid>
</Window>
